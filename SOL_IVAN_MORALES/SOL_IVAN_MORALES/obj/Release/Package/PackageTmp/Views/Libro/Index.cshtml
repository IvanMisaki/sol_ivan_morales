@using System
@model IEnumerable<SOL_IVAN_MORALES.Models.LIBRO>

@{
    ViewBag.Title = "Index";
}

<h2>Catálogo de Libros</h2>

<p>
    @Html.ActionLink("Agregar Libro", "Insert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORIA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AUTOR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PAIS)
        </th>
        <th>
            FECHA PUBLICACIÓN
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EDITORIAL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORIA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AUTOR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PAIS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FECHA_PUBLICACION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EDITORIAL)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
